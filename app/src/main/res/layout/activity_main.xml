<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:background="#DAFFE3EC"
            android:orientation="horizontal"
            android:translationY="15dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#D7E9F5"
                android:text="#러블리"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#DCDCDC"
                android:text="#어두운"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#F9EFA9"
                android:text="#소품샵"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="347dp"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:background="@drawable/home_1"
            android:translationY="35dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Today's Cafe"
            android:textSize="40dp"
            android:translationX="20dp"
            android:translationY="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="191dp"
                android:layout_height="162dp"
                android:background="@drawable/home_2"
                android:padding="30dp"
                android:translationX="30dp"
                android:translationY="75dp" />

            <TextView
                android:id="@+id/todaycafetextView"
                android:layout_width="140dp"
                android:layout_height="125dp"
                android:text="달콤한 하루는 디어쥬와 함께 하세요!"
                android:textSize="24dp"
                android:translationX="50dp"
                android:translationY="90dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


