<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:columnCount="3">

            <Button
                android:id="@+id/menu"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#D7E9F5"
                android:drawableTop="@drawable/ic_baseline_menu_24"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/main"
                android:layout_width="225dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="@string/my_page"
                android:textSize="35sp"
                android:textStyle="bold" />

        </GridLayout>


        <Button
            android:id="@+id/name"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_gravity="top"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#F9EFA9"
            android:drawableTop="@drawable/ic_baseline_map_24"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />


        <GridLayout
            android:layout_width="410dp"
            android:layout_height="395dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="25dp"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/favorite_list"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="top"
                android:layout_marginStart="30dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#DCDCDC"
                android:drawableTop="@drawable/ic_baseline_favorite_border_24"
                android:text="찜"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/information"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_marginStart="25dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#DCDCDC"
                android:drawableTop="@drawable/ic_baseline_perm_identity_24"
                android:text="개인정보수정"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>