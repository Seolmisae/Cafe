<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.cafe.Customorder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="주문하기"
            android:textSize="30sp"
            android:translationX="50dp" />

        <View
            android:id="@+id/order_bar"
            android:layout_width="269dp"
            android:layout_height="6dp"
            android:background="#BAAC9898" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D3EFFB"
            android:textStyle="bold"
            android:text="주문자 정보"
            android:translationX="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문자 성명"
            android:translationX="30dp"
            android:translationY="25dp" />

        <EditText
            android:id="@+id/cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="홍길동"
            android:translationX="30dp"
            android:translationY="15dp"
            android:autofillHints="cname"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:translationX="30dp"
            android:translationY="15dp" />

        <EditText
            android:id="@+id/cphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:translationX="30dp"
            android:translationY="2dp"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:text="픽업날짜/시간"
            android:translationX="30dp"
            android:translationY="3dp" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="달력 버튼을 누르세요."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/edge"
            android:translationX="30dp"
            android:translationY="10dp"/>

        <Button
            android:id="@+id/date_choice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_date_range_24"
            android:padding="3dp"
            android:onClick="OnClickHandler"
            android:translationX="250dp"
            android:translationY="-35dp"
            app:backgroundTint="#808080"
            tools:ignore="OnClick,UsingOnClickInXml" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D3EFFB"
            android:textStyle="bold"
            android:text="케이크 사이즈"
            android:translationX="30dp"
            android:translationY="-25dp" />

        <RadioGroup
            android:id="@+id/Radiog1"
            android:layout_width="365dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:translationX="20dp"
            android:translationY="-20dp">

            <RadioButton
                android:id="@+id/dosize"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="도시락(1-2인)" />

            <RadioButton
                android:id="@+id/minisize"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="미니사이즈(1-2인)" />

            <RadioButton
                android:id="@+id/smallsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1호(3-4인)" />

            <RadioButton
                android:id="@+id/bigsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2호(4인 이상)" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D3EFFB"
            android:textStyle="bold"
            android:text="케이크 시트"
            android:translationX="30dp"
            android:translationY="-25dp"/>

        <RadioGroup
            android:layout_width="365dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:translationX="20dp"
            android:translationY="-25dp">

            <RadioButton
                android:id="@+id/vanilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="바닐라" />

            <RadioButton
                android:id="@+id/choco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="초코" />

            <RadioButton
                android:id="@+id/redvelvet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="레드벨벳" />

            <RadioButton
                android:id="@+id/guitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기타(참고 추가)" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D3EFFB"
            android:textStyle="bold"
            android:text="나이 (초 개수)"
            android:translationX="30dp"
            android:translationY="-45dp"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:translationX="30dp"
            android:translationY="-45dp">

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0"
                tools:ignore="LabelFor"
                android:autofillHints="" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="세 (개)" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D3EFFB"
            android:textStyle="bold"
            android:text="디자인 참고자료"
            android:translationX="30dp"
            android:translationY="-40dp"/>

        <EditText
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="354dp"
            android:layout_height="140dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="원하시는 문구, 색상, 그림, 이미지 등 추가사항을 상세하게 작성해주세요. 해당 글은 사장님께 전달됩니다."
            android:inputType="textMultiLine"
            android:translationX="30dp"
            android:translationY="-35dp"
            android:autofillHints="" />

        <Button
            android:id="@+id/buttonok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:translationX="300dp"
            android:translationY="-30dp"
            app:backgroundTint="#808080"
            />


    </LinearLayout>

</ScrollView>
